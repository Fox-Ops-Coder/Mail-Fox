<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailFox.UI.Responce" x:Name="responceWindow" x:Class="MailFox.UI.Responce.ResponceWindow"
        x:ClassModifier="internal"
        mc:Ignorable="d"
        Title="ResponceWindow" Height="450" Width="800" Uid="{Binding Guid, Mode=OneWay}">
    <Window.DataContext>
        <local:ResponceContext/>
    </Window.DataContext>
    <Grid x:Name="responceGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="responceText" TextWrapping="Wrap" Text="{Binding ResponceText}"/>

        <Button x:Name="saveResponceButton" Grid.Row="1" Content="Сохранить" Margin="300,10,305,10" Command="{Binding SaveCommand, Mode=OneWay}"/>

    </Grid>
</Window>
