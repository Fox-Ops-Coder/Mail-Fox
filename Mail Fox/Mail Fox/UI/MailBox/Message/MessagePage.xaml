<Page x:Name="messagePage" x:Class="MailFox.UI.MailBox.Message.MessagePage"
      x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MailFox.UI.MailBox.Message"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MessagePage">

    <Grid x:Name="messageGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Text="От:" />
        <TextBlock Grid.Column="1" TextWrapping="Wrap" />
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="Кому:" />
        <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" />
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Text="Тема:" />
        <TextBlock Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" />
        <TextBlock Grid.Row="3" TextWrapping="Wrap" Grid.ColumnSpan="2" />
    </Grid>
</Page>