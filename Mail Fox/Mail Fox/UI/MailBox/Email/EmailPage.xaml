<Page x:Class="MailFox.UI.MailBox.Email.EmailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MailFox.UI.MailBox.Email"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmailPage">
    <Page.DataContext>
        <local:EmailPageContext/>
    </Page.DataContext>

    <Grid>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" SelectedIndex="0" ItemsSource="{Binding MailServices}"/>
    </Grid>
</Page>