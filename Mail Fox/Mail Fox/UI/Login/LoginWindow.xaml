<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailFox.UI.Login"
        xmlns:Context="clr-namespace:MailFox.UI.Context" x:Name="loginWindow" x:Class="MailFox.UI.Login.LoginWindow"
        x:ClassModifier="internal"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Uid="{Binding Guid, Mode=OneWay}">
    <Window.DataContext>
        <Context:ContextBase/>
    </Window.DataContext>
    <Grid x:Name="loginGrid">
        <Frame x:Name="loginFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>