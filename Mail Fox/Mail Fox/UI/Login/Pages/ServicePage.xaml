<Page x:Class="MailFox.UI.Login.Pages.ServicePage"
      x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MailFox.UI.Login.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="loginTitle" TextWrapping="Wrap" Text="Выбрерите почтовый сервис, в который хотите войти" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" />
        <ComboBox x:Name="servicesComboBox" Grid.Row="1" SelectedIndex="0" SelectedItem="{Binding SelectedService}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="200,0,200,0" ItemsSource="{Binding MailServices, Mode=OneWay}" />
        <Button x:Name="loginButton" Content="Войти" Grid.Row="2" Command="{Binding LoginCommand, Mode=OneWay}" Margin="300,50,300,50" />
    </Grid>
</Page>
