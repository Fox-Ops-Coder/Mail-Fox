<Page x:Name="loginPage" x:Class="Outlook.UI.LoginPage"
      x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid x:Name="loginGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Margin="300,50,300,50" Content="Войти" Command="{Binding LoginCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=passwordBox, Mode=OneWay}" />
        <TextBox Grid.Column="1" TextWrapping="Wrap" Text="{Binding Email}" />
        <TextBlock TextWrapping="Wrap" Text="Почтовый адрес:" />
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="Пароль" />
        <PasswordBox x:Name="passwordBox" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Page>